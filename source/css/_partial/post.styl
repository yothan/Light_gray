div.header_post{
  width: 100%;
  margin-top: 60px;

  img.flower_small{
    height: 18px;
    opacity: 0.8;
  }

  div.post-title{
    margin: 30px 0 -16px;
  }

  .post-meta {
    font-size: 12px;
    padding: 30px 0 0;

    .post-time{
      opacity: 0.3;
    }
  }

  span.title{
    font-size: 32px;
    font-family: serif;
  }

  span.tags-links{
    font-size: 12px;
    float: right;

      a {
        padding-left: 20px;
        opacity: 0.3;
        transition: opacity 200ms ease;
      }

      a:hover{
        opacity: 0.8;
      }
  }
}

.post {
  padding: 40px 60px;
  background-color: #fff;

  .post-content {

    p {
      line-height: 30px;
      opacity: 0.8;
    }

    a {
      color: #368CCB;
      text-decoration: none;
    }
  }
}

.posts {
  .post:first-child {
    padding-top: 50px;
    margin-top: 0;
  }

  .post {
    padding: 25px 60px;
  }

  .post-title {
    font-size: 1.5em;
    font-family: serif;

    .post-title-link {
      color: #333333;
      text-decoration: none;
    }
  }

  .post-content {
    line-height: 30px;
    opacity: 0.8;
    a {
      color: #368CCB;
      text-decoration: none;
    }
    p {
      opacity: 1;
    }
  }

  .post-meta {
    font-size: 12px;
    padding: 0;

    .post-time{
      opacity: 0.3;
    }

    span.tags-links{
      float: right;

        a{
          padding-left: 20px;
          opacity: 0.3;
          transition: opacity 200ms ease;
        }

        a:hover{
          opacity: 0.8;
        }
    }
  }

  .post::after {
    margin-top: 50px;
    position: relative;
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    background-color: #333;
    opacity: 0.07;
  }
}
